generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model MuscleGroup {
    id            Int     @id @default(autoincrement())
    muscle        String  @unique
    description   String  @default("N/A")
    MV_MIN        Int
    MV_MAX        Int
    MEV_MIN       Int
    MEV_MAX       Int
    MAV_MIN       Int
    MAV_MAX       Int
    MRV_MIN       Int
    MRV_MAX       Int
    frequency_min Int     @default(0)
    frequency_max Int     @default(0)
    frequency     String?

    article_url String?
    excercises  Excercise[]
    video       String      @default(NULL)
    images      Image[]
}

model Excercise {
    id            Int          @id @default(autoincrement())
    MuscleGroup   MuscleGroup? @relation(fields: [muscleGroupId], references: [id])
    muscleGroupId Int?
    name          String
    url           String
}

model Image {
    id            Int          @id @default(autoincrement())
    MuscleGroup   MuscleGroup? @relation(fields: [muscleGroupId], references: [id])
    muscleGroupId Int?
    path          String
}
